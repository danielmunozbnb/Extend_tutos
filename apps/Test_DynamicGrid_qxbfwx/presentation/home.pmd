{
  "id": "home",
  "endPoints": [
    {
      "name": "workers",
      "baseUrlType": "wql",
      "url": "data?query=SELECT%20worker%2C%20firstName%2C%20lastName%20FROM%20allWorkers",
      "authType": "sso",
      "_deferred": true
    }
  ],
  "outboundData": {
    "outboundEndPoints": [
      {
        "name": "workerUpdate",
        "baseUrlType": "app",
        "url": "/workers/<% 'me' %>/businessTitleChanges",
        "httpMethod": "POST",
        "authType": "sso",
        "_onSend": "<%  %>",
        "_values": [
          {
            "_outboundPath": "image.id",
            "_value": "<% (!empty(createAnEventImage.id)) ? createAnEventImage.id : null %>"
          }
        ]
      }
    ]
  },
  "script": "<%
             // Invoke endpoint and pass id as a URL paramater
            // this function populates grid when a worker is selected
             // change attributes to fit grid
             var populate = function(id) {
                 if( !(empty id)) {
                     var workerData = getWorkerbyId.invoke({'id': id[0]});
                         descriptor.value = workerData.descriptor;
                         dateOfBirth.value = workerData.dateOfBirth;
                         workerDetail.visible = true;
                 } else {
                     workerDetail.visible = false;
                 }
             };
             %>",


  "presentation": {
    "pageType": "edit",
    "title": {
      "type": "title",
      "label": "Test Dynamic Grid"
    },
    "body": {
      "type": "section",
      "horizontal": false,
      "sorted": false,
      "children": [
        {
          "type": "section",
          "horizontal": true,
          "children": [
            {
              "type": "fieldSet",
              "id": "fieldSetContainer",
              "children": [
                {
                   "type": "dropdown",
                   "selectedValues": "<% ['worker'] %>",
                   "label": "fil",
                   "id": "dropdownList",
                   "instanceList": [
                     {
                       "id": "Special Leave",
                       "descriptor": "Special Leave"
                     },
                     {
                       "id": "Special Leave - Domestic",
                       "descriptor": "Special Leave - Domestic"
                     }
                   ],
                   "required": "true"
                 },
                {
                  "type": "instanceList",
                  "id": "instanceListWorkerSearch",
                  "label": "Worker",
                  "values": "<% workers.data %>",
                  "multiSelect": false,
                  "_onChange": "<% populate(self.value); %>"
                },
                {
                  "type": "section",
                  "horizontal": true,
                  "children": [
                    {
                      "type": "section",
                      "children": [
                        {
                          "type": "button",
                          "id": "filter",
                          "label": "FILTER",
                          "taskReference": {
                            "type": "taskReference",
                            "taskId": "root"
                          },
                          "action": "AUXILIARY"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "grid",
                  "id": "dataGrid",
                  "gridType": "LIST",
                  "rows": "<% workers.data %>",
                  "rowVariableName": "row",
                  "doNotAdd": "true",
                  "doNotRemoveRow": "true",
                  "enabled": true,
                  "columns": [
                    {
                      "type": "column",
                      "columnId": "colEmployeeId",
                      "label": "Employee ID",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.worker.id %>"
                      }
                    },
                    {
                      "type": "column",
                      "columnId": "colFirstName",
                      "label": "First Name",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.firstName %>"
                      }
                    },
                    {
                      "type": "column",
                      "columnId": "colLastName",
                      "label": "Last Name",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% [] %>"
                      }
                    },
                    {
                      "type": "column",
                      "columnId": "colBusinessTitle",
                      "label": "Business Title",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.column4 %>"
                      }
                    }
                  ]
                }

              ]
            }
          ]
        }
      ]
    },
    "footer": {
      "type": "footer",
      "children": [
        {
          "type": "richText",
          "enabled": "false",
          "value": "Powered By Daniel & Andrei"
        }
      ]
    }
  }
}